<html lang="en">
<%- include("./partials/head.ejs") %>
<body>

  <% if(logged==true){ %>
    <%- include("./partials/nav2.ejs") %>
  <% } else {%>
    <%- include("./partials/nav.ejs") %>
  <% } %>
  <div class="flex-wrapper">
    <div class="container-box">
      <div class="row">
        <div class="container px-5 py-3">
          <div class="col-12">
            <h2>All Books</h2>
          </div>
  
        </div>
      </div>
      <div class="row content-row bg-light py-4">
  
          <% if (books.length> 0) { %>
            <% books.forEach(book=> { %>
              
              <a class="single" , href="/browse/<%=book._id%>">
                <div class="container section p-3">
                  <p>
                    <h3>
                      <%= book.title %>
                    </h3>
                    <%= book.authour%><br>
                    <%= book.pubdate.split('-')[0]%>
                  </p>
                </div>
              </a>
            <% }) %>
            <% } else { %>
              <div class="container section p-3">
                <p>There are no books to display...</p>
              </div>
            <% } %>
      </div>
    </div>
    <%- include("./partials/footer.ejs") %>
  </div>
  <%- include("./partials/script.ejs") %>
</body>
</html>